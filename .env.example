# 認証設定
AUTH_ENABLED=true  # 認証を有効にする場合はtrue
AUTH_PASSWORD=tgs2025  # ログインパスワード（日替わりで変更推奨）

# TGS展示デモ機設定
# デモ機のIPアドレスをカンマ区切りで指定（レート制限が適用されません）
# 例: DEMO_IP_ADDRESSES=192.168.1.100,192.168.1.101,192.168.1.102
DEMO_IP_ADDRESSES=

# Slack通知設定（オプション）
# Webhook URLを設定すると、稼働状況レポートが自動送信されます
# 例: SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX
SLACK_ENABLED=true  # Slack通知を有効にする場合はtrue
SLACK_WEBHOOK_URL=

# ElevenLabs API設定
ELEVENLABS_API_KEY=your_api_key_here
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1
ELEVENLABS_TIMEOUT=30.0
ELEVENLABS_MAX_RETRIES=3

# アプリケーション設定
APP_ENV=development
API_HOST=0.0.0.0
API_PORT=8000

# データベース設定
DATABASE_URL=sqlite:///./app.db

# ロギング設定
LOG_LEVEL=INFO
LOG_FILE=

# キャッシュ設定
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ストレージ設定
STORAGE_PATH=./storage
STORAGE_AUDIO_DIR=audio
STORAGE_TEMP_DIR=temp

# レート制限設定
RATE_LIMIT_ENABLED=true  # レート制限を有効にする場合はtrue（デモ機は常に除外）
RATE_LIMIT_PER_HOUR=10  # 1時間あたりの最大生成回数
RATE_LIMIT_BURST=3  # 短期間での連続生成許容数
RATE_LIMIT_MIN_INTERVAL=5  # 生成間隔の最小秒数
